	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	


	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>*.dog</url-pattern>
	</servlet-mapping>
	
	  
<!-- Filtering all url    --> 
  <filter>
    <display-name>UTF8Filter</display-name>
    <filter-name>UTF8Filter</filter-name>
    <filter-class>com.dog.web.util.UTF8Filter</filter-class>   
  </filter>
  <filter-mapping>
    <filter-name>UTF8Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping> 

  	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<!-- Displays a stack trace -->
		<location>/jsp/uncaughtException.jsp</location>
	</error-page>
 


<!-- DataSource -->	
<resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/Datasource_watchdog</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>